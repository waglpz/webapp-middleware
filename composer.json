{
  "name": "waglpz/webapp-middleware",
  "description": "Web App Middleware Components",
  "license": "MIT",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "require": {
    "php": "^7.4",
    "ext-apcu": "*",
    "phpro/api-problem": "^1.4",
    "psr/http-message": "^1.0",
    "waglpz/webapp-security": "dev-develop"
  },
  "require-dev": {
    "doctrine/coding-standard": "^9.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.5",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpstan/phpstan-symfony": "^1.1",
    "phpstan/phpstan-webmozart-assert": "^1.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/var-dumper": "^5.4"
  },
  "conflict": {
  },
  "autoload": {
    "psr-4": {
      "Waglpz\\Webapp\\Middleware\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Waglpz\\Webapp\\Middleware\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "waglpz:cs-check": "phpcs -p",
    "waglpz:cs-fix": "phpcbf -p",
    "waglpz:test:normal": "phpunit --colors=always tests",
    "waglpz:analyse": [
      "phpstan analyse --configuration=phpstan.neon src/ tests/ --level max"
    ],
    "waglpz:check:ci": [
      "@waglpz:check:normal"
    ],
    "waglpz:check:normal": [
      "@waglpz:cs-check",
      "@waglpz:analyse",
      "@waglpz:test:normal"
    ]
  }
}
